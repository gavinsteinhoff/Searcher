<Window x:Class="Searcher.Output"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Searcher"
        mc:Ignorable="d"
        Title="Output"  WindowState="Maximized" FontSize="16" Height="Auto" Width="Auto">
    <ScrollViewer Name="Scroll" ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="Auto" Width="Auto">
        <TextBlock Name="Text" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Height="Auto" Width="Auto"/>
    </ScrollViewer>
</Window>
